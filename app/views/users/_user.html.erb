<li>
  <% if user.picture.present? %>
    <%= image_tag user.picture, size: 50 %>
  <% else %>
    <%= gravatar_for user, size: 50 %>
  <% end %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_page?(user) %>
    | <%= link_to "delete", user, method: :delete,
        data: {confirm: "You sure?"} %>
  <% end %>
</li>
